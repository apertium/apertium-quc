  <mode name="quc-morph" install="yes">
    <pipeline>
      <program name="hfst-proc -w">
        <file name="quc.automorf.hfst"/>
      </program>
    </pipeline>
  </mode>

  <mode name="quc-phone" install="yes">
    <pipeline>
      <program name="sed &quot;s/['’]/ʼ/g&quot;"/>
      <program name="hfst-proc -w -N 1">
        <file name="quc.autophon.hfst"/>
      </program>
    </pipeline>
  </mode>

  <mode name="quc-segmenter" install="yes">
    <pipeline>
      <program name="sed &quot;s/['’]/ʼ/g&quot;"/>
      <program name="hfst-proc">
        <file name="quc.autoseg.hfst"/>
      </program>
    </pipeline>
  </mode>

  <mode name="quc-disam" install="yes">
    <pipeline>
      <program name="sed &quot;s/['’]/ʼ/g&quot;"/>
      <program name="hfst-proc -w">
        <file name="quc.automorf.hfst"/>
      </program>
      <program name="cg-conv -a -l"/>
      <program name="vislcg3 --trace --grammar">
        <file name="quc.rlx.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="quc-tagger" install="yes">
    <pipeline>
      <program name="sed &quot;s/['’]/ʼ/g&quot;"/>
      <program name="hfst-proc -w">
        <file name="quc.automorf.hfst"/>
      </program>
      <program name="cg-proc -1 -n">
        <file name="quc.rlx.bin"/>
      </program>
    </pipeline>
  </mode>


</modes>
